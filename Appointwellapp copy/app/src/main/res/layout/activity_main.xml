<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/tertiary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="35dp">

                <TextView
                    android:id="@+id/signuptxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Sign up"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/createaccounttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Create your account"
                    android:textSize="14dp"
                    android:textColor="@color/primary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_bg"
                >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >

                <RadioButton
                    android:textColor="@color/tertiary"
                    android:id="@+id/patientbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/poppins_regular"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Patient"
                    android:textSize="17.5dp" />

                <RadioButton
                    android:textColor="@color/tertiary"
                    android:id="@+id/doctorbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:fontFamily="@font/poppins_regular"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="Doctor"
                    android:textSize="17.5dp" />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/fieldslayout"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Email"
                    android:textColor="@color/text"
                    android:textSize="12.5dp" />

                <EditText
                    android:id="@+id/emailinput"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/input_style"
                    android:paddingLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/firstnametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="123dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="First Name"
                        android:textColor="@color/text"
                        android:textSize="12.5dp" />


                    <TextView
                        android:id="@+id/lastnametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Last Name"
                        android:textColor="@color/text"
                        android:textSize="12.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/firstnameinput"
                        android:layout_width="130dp"
                        android:layout_height="53dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/input_style"
                        android:paddingLeft="10dp" />

                    <EditText
                        android:id="@+id/lastnameinput"
                        android:layout_width="130dp"
                        android:layout_height="53dp"
                        android:background="@drawable/input_style"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/areacodetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="102dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Area Code   "
                        android:textColor="@color/text"
                        android:textSize="12.5dp" />


                    <TextView
                        android:id="@+id/phonenumbertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Phone Number"
                        android:textColor="@color/text"
                        android:textSize="12.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/areacodeinput"
                        android:layout_width="90dp"
                        android:layout_height="53dp"
                        android:layout_marginRight="9.5dp"
                        android:background="@drawable/input_style"
                        android:paddingLeft="10dp" />

                    <EditText
                        android:id="@+id/phonenumberinput"
                        android:layout_width="190dp"
                        android:layout_height="53dp"
                        android:background="@drawable/input_style"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/addresstxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Address"
                    android:textColor="@color/text"
                    android:textSize="12.5dp" />

                <EditText
                    android:id="@+id/addressinput"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/input_style"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/healthcardnumbertxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Health Card Number"
                    android:textColor="@color/text"
                    android:textSize="12.5dp" />

                <EditText
                    android:id="@+id/healthcardinput"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/input_style"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/passwordtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Password"
                    android:textColor="@color/text"
                    android:textSize="12.5dp" />

                <EditText
                    android:id="@+id/passwordinput"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/input_style"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/specialtiestxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Specialties"
                    android:textColor="@color/text"
                    android:textSize="12.5dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/specialtiesinput"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/input_style"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity = "right"
                    android:layout_marginTop="40dp">

                    <Button
                        android:backgroundTint="@color/secondary"
                        android:text="Sign Up"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="105dp"
                        android:layout_height="match_parent">
                    </Button>
                </LinearLayout>


            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>