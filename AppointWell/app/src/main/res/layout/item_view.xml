<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/requestItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/clickformoreinfo"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cardview"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="OCT 18 2023"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/patientName"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="name"
                    android:textSize="20dp"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_bold"
                   />

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="Time:"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dark_green"
                    android:fontFamily="@font/poppins_light"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="210dp"
                    android:layout_height="70dp"
                    android:text="10:00 - 11:00"
                    android:paddingLeft="10dp"
                    android:textSize="30dp"
                    android:textColor="@color/tertiary"
                    android:fontFamily="@font/poppins_bold"

                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:orientation="vertical"

            >
            <ImageButton
                android:id="@+id/approveRequestBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/approve"
                android:visibility="visible"
                >
            </ImageButton>
            <ImageButton
                android:id="@+id/rejectRequestBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rejectbtn"
                >
            </ImageButton>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>