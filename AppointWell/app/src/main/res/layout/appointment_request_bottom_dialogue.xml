<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/slidedialogbox"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/slidedownline"/>

            <TextView
                android:id="@+id/slideInName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/secondary"
                android:textSize="40dp"
                android:text="Jane Doe"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/slideInType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:text="Patient"
                android:textColor="@color/tertiary"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/slideInAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Address: 200 Metcalfe Street"
                android:textColor="@color/dark_green"
                android:textSize="16dp" />

        <TextView
            android:id="@+id/slideInPhoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Phone number: 1234567890"
            android:textColor="@color/dark_green"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/slideInEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Email: patient@me.com"
            android:textColor="@color/dark_green"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/slideInHealthCardNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Health card number: 0987654321"
            android:textColor="@color/dark_green"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/completedBtn"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/completed"
            android:visibility="gone"/>






    </LinearLayout>

</LinearLayout>