<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/time_slot_bg"
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayoutTS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:textColor="@color/secondary"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availability:"/>
                <TextView
                    android:id="@+id/timetxt"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 - 14:00"/>
                <TextView
                    android:id="@+id/datetxt"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28/11/2023"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="end"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/nametxt"
                    android:textColor="@color/tertiary"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr Jane Doe"/>
                <TextView
                    android:id="@+id/specialtytxt"
                    android:textColor="@color/secondary"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialty: Family Medicine"/>

                <ImageButton
                    android:layout_marginEnd="30dp"
                    android:id="@+id/bookBTN"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tick_svg" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>