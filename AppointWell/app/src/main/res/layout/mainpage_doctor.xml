<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbacks"
    tools:context=".MainPageDoctor">
    <TextView
        android:id="@+id/myaccount"
        android:layout_width="207dp"
        android:layout_height="58dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Hello"
        android:textColor="#CFE0C3"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="248dp"
        android:background="@drawable/border1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271">

        <TextView
            android:textAlignment="center"
            android:layout_width="291dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Welcome to AppointWell"
            android:textColor="#1F363D"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/welcomeMessageTextView"
            android:layout_width="291dp"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:textColor="#70A9A1"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/logintext"
            android:textAlignment="center"
            android:layout_width="291dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="155dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#70A9A1"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appointmentBtn"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border"
                android:text="Appointment"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AppRequestBtn"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border"
                android:text="Appointment Request"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shiftBtn"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border"
                android:text="Shift"
                android:textColor="@color/black" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
